<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ContentText">
        <item name="android:textSize">@dimen/student_name_textsize</item>
        <item name="android:textColor">@color/student_name_textcolor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/student_name_marginTop</item>
    </style>

    <style name="ContentTextLabel">
        <item name="android:textSize">@dimen/student_name_text_label_size</item>
        <item name="android:textColor">@color/student_name_textcolor</item>
        <item name="android:layout_marginTop">@dimen/student_name_marginTop</item>
    </style>

    <style name="ItemSeperator">
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">@dimen/height_item_seperator</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

</resources>
